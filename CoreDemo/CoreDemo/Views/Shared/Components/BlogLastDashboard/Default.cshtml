@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Yayınlanan 10 Bloglar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Blog Başlığı </th>
                                <th> Kategori </th>
                                <th>Tarih </th>
                                <th> Tracking ID </th>
                                <th>Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.BlogThumbnailImage" class="mr-2" alt="image"> @item.BlogTitle
                                    </td>
                               
                                    <td>
                                        <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                                    </td>
                                    <td> @(((DateTime)item.BlogCrateDate).ToString("dd/MM/yyyy"))</td>
                                    <td> @item.BlogID </td>
                                    <td><a href="/Blog/BlogReadAll/@item.BlogID" class="btn-dark btn-sm">Detaylar</a></td>
                                </tr>
                            }
                           
                 
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>