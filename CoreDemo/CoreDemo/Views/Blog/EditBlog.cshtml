
@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>EditBlog</h1>
@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post))
{
    @Html.Label("BlogID");
    @Html.TextBoxFor(x => x.BlogID, new { @class = "form-control" });

    @Html.Label("Blog Başlığı");  
    @Html.TextAreaFor(x => x.BlogTitle, new { @class = "form-control" });

    @Html.Label("Blog Thumbnail Url");
    @Html.TextAreaFor(x => x.BlogThumbnailImage, new { @class = "form-control" });

    @Html.Label("Blog Görseli");
    @Html.TextAreaFor(x => x.BlogImage, new { @class = "form-control" });

    @Html.Label("Kategori");
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cv, "Kategori Seçiniz", new { @class = "form-control" })

    @Html.Label("Blog İçeriği");
    @Html.TextAreaFor(x => x.BlogContent, 10, 3 ,  new { @class = "form-control" });

    
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="/Blog/BlogListByWriter" class="btn btn-danger">İptal</a>

}
