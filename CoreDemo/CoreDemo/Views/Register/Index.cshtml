@model EntityLayer.Concrete.Writer


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
               @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız Soyadınız</label>


                            @Html.TextBoxFor(x => x.WriterName, new {@class = "form-control"})
                            @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })

                            @* <input type="text" class="form-control" name="WriterName" id="ValidationDefault01" placeholder="Adınız Soyadınız..." required=""> *@
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-Mail</label>
                            @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
                            @* <input type="email" class="form-control" name="WriterMail" id="ValidationDefault02" placeholder="e-mail..." required=""> *@
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifreniz</label>
                            @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control", placeholder = "Password" })
                            @* @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" }) *@
                            @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                            
                            @* <input type="password" class="form-control" name="WriterPassword" id="password1" placeholder="" required=""> *@
                        </div>
                        @* <div class="form-group col-md-6">
                        <label for="exampleInputPassword2 mb-2">Şifrenizi Onaylayın</label>
                        <input type="password" class="form-control" id="password2" name="" placeholder="" required="">
                        </div> *@
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
                            @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.WriterImage, "", new { @class = "text-danger" })

                            @* <input type="textx" class="form-control" id="password2" name="WriterImage" placeholder="" required=""> *@
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol!</button>
                    <p>
                        <a href="#" id="btn1">Kullanım Koşulları ve Gizlilik Politikası</a>
                        <p> Kayıt ol butonuna tıklayarak , Tüm şartları okudum ve kabul ediyorum</p>
                    </p>
                }

            </div>
        </div>
    </div>



    <script>

        $(document).ready(function () {
            $("#btn1").click(function () {
                Swal.fire({
                    title: 'Kullanım Koşulları ve Gizlilik Politikası!',
                    text: '   Kullanım Koşulları Sitemizi kullanarak bu koşulları kabul edersiniz.İçerikler bilgilendirme amaçlıdır.Üçüncü parti sitelerden sorumlu değiliz.Hesap bilgilerinizin gizliliği sizin sorumluluğunuzdadır.Gizlilik Politikası Ad ve e- posta gibi bilgileri toplarız.Bu bilgileri hizmet sunumu için kullanırız.Yasal zorunluluklar dışında bilgilerinizi paylaşmayız.Çerezler, kullanıcı deneyimini iyileştirmek için kullanılır.Değişiklikler Koşullar ve politikalar değişebilir, bu sayfayı takip edebilirsiniz.İletişim	Sorularınız için: ibrahim.akt@outlook.com',
                    icon: 'info',
                    confirmButtonText: 'Tamam'
                })
            });
        });


    </script>

</section>








